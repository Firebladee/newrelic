#
# New Relic Server Monitor configuration file.
#

license_key=<%= @key %>

loglevel=<%= @log_level %>
logfile=<%= @logfile %>
<% if !@collector_host.empty? %>collector_host=<%= @collector_host %><% end -%>
<% if !@hostname.empty? %>hostname=<%= @hostname %><% end -%>
<% if !@ignore_reclaimable.empty? %>ignore_reclaimable=<%= @ignore_reclaimable %><% end -%>
<% if !@labels.empty? %><% if @labels.is_a?(Array) %>labels=<%= @labels.join(";") -%>;
  <%- else -%>
labels=<%= @labels %>
  <%- end -%>
<% end -%>
<% if !@pidfile.empty? %>pidfile=<%= @pidfile %><% end -%>
<% if !@proxy.empty? %>proxy=<%= @proxy %><% end -%>
<% if !@ssl.empty? %>ssl=<%= @ssl %><% end -%>
<% if !@ssl_ca_bundle.empty? %><% if @ssl_ca_bundle.is_a?(Array) %>ssl_ca_bundle=<%= @ssl_ca_bundle.join(",") -%>
  <%- else -%>
ssl_ca_bundle=<%= @ssl_ca_bundle %>
  <%- end -%>
<% end -%>
<% if !@ssl_ca_path.empty? %>ssl_ca_path=<%= @ssl_ca_path %><% end -%>
<% if !@timeout.empty? %>timeout=<%= @timeout %><% end -%>
<% if !@disable_nfs.empty? %>disable_nfs=<%= @disable_nfs %><% end -%>
<% if !@disable_docker.empty? %>disable_docker=<%= @disable_docker %><% end -%>
<% if !@docker_connection.empty? %>docker_connection=<%= @docker_connection %><% end -%>
<% if !@docker_cert_path.empty? %>docker_cert_path=<%= @docker_cert_path %><% end -%>
<% if !@docker_cert.empty? %>docker_cert=<%= @docker_cert %><% end -%>
<% if !@docker_key.empty? %>docker_key=<%= @docker_key %><% end -%>
<% if !@docker_cacert.empty? %>docker_cacert=<%= @docker_cacert %><% end -%>
<% if !@cgroup_root.empty? %>cgroup_root=<%= @cgroup_root %><% end -%>
<% if !@cgroup_style.empty? %>cgroup_style=<%= @cgroup_style %><% end -%>
